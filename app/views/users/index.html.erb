<h1>Listing users</h1>

<table>
  <tr>
    <th>Uid</th>
    <th>Name</th>
    <th>Birthday</th>
    <th>Bio</th>
    <th>Provider</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.uid %></td>
    <td><%= user.name %></td>
    <td><%= user.birthday %></td>
    <td><%= user.bio %></td>
    <td><%= user.provider %></td>
    <td><%= link_to 'Show', user %></td>
  <% if current_user.admin? %>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  <% end %>
  </tr>
<% end %>
</table>

